<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://browseCaption"
        focusComponent="customersTable"
        messagesPack="com.sweethill.orderstore.web.screens.customer">
    <data readOnly="true">
        <collection id="customersDc"
                    class="com.sweethill.orderstore.entity.customer.Customer"
                    view="_local">
            <loader id="customersDl">
                <query>
                    <![CDATA[select e from orderstore_Customer e]]>
                    <condition>
                        <and>
                            <c:jpql>
                                <c:where>e.owner = :owner</c:where>
                            </c:jpql>
                        </and>
                    </condition>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="customersTable"
            spacing="true">
        <filter id="filter"
                applyTo="customersTable"
                dataLoader="customersDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="customersTable"
                    width="100%"
                    dataContainer="customersDc">
            <actions>
            </actions>
            <columns>
                <column id="name"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
