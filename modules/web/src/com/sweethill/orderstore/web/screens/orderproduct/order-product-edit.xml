<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.sweethill.orderstore.web.screens.orderproduct">
    <data>
        <instance id="orderProductDc"
                    class="com.sweethill.orderstore.entity.production.management.OrderProduct"
                    view="orderProduct-view">
            <loader/>
        
            <collection id="itemsDc" property="items"/>
        
            <collection id="materialsDc" property="materials"/>
        </instance>
        
    </data>
    
    <dialogMode height="600"
                width="800"/>
<layout expand="editActions" spacing="true">
    
        

<form id="form" dataContainer="orderProductDc">
<column width="250px">
	
	<textField id="orderNumField" property="orderNum"/>
	
	<dateField id="orderDateField" property="orderDate"/>
	
	<textField id="orderNoteField" property="orderNote"/>
	
	<dateField id="readyDateField" property="readyDate"/>
	
	<pickerField id="ownerField" property="owner">
		<actions><action id="lookup" type="picker_lookup"/><action id="clear" type="picker_clear"/></actions>
	</pickerField>
	
</column>
</form>

        
            
<groupBox id="itemsBox" caption="msg://com.sweethill.orderstore.entity.production.management/OrderProduct.items">
<table id="itemsTable" dataContainer="itemsDc" width="100%" height="200px">
    
    <actions>
        <action id="create" type="create"/>
        <action id="edit" type="edit"/>
        <action id="remove" type="remove"/>
    </actions>
    
    <columns>
        
            <column id="product"/>
        
            <column id="stockProduct"/>
        
            <column id="quantity"/>
        
            <column id="unit"/>
        
            <column id="specification"/>
        
            <column id="stockMaterials"/>
        
            <column id="orderProduct"/>
        
    </columns>
    
    <buttonsPanel>
        <button action="itemsTable.create"/>
        
        <button action="itemsTable.edit"/>
        
        <button action="itemsTable.remove"/>
    </buttonsPanel>
    
</table>
</groupBox>
        
            
<groupBox id="materialsBox" caption="msg://com.sweethill.orderstore.entity.production.management/OrderProduct.materials">
<table id="materialsTable" dataContainer="materialsDc" width="100%" height="200px">
    
    <actions>
        <action id="create" type="create"/>
        <action id="edit" type="edit"/>
        <action id="remove" type="remove"/>
    </actions>
    
    <columns>
        
            <column id="good"/>
        
            <column id="quantity"/>
        
            <column id="unit"/>
        
            <column id="orderProduct"/>
        
    </columns>
    
    <buttonsPanel>
        <button action="materialsTable.create"/>
        
        <button action="materialsTable.edit"/>
        
        <button action="materialsTable.remove"/>
    </buttonsPanel>
    
</table>
</groupBox>
        
        
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
