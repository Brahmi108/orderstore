<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.sweethill.orderstore.web.screens.goods">
    <data>
        <instance id="goodsDc"
                  class="com.sweethill.orderstore.entity.Goods"
                  view="goods-view">
            <loader/>
            <collection id="name_optionsDC" property="name_options"/>
        </instance>
    </data>
    <layout expand="editActions">
        <form id="form" dataContainer="goodsDc">
            <column width="600px">
                <textField id="nameField" property="name"/>
                <pickerField id="groupField" property="group">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <textField id="codeField" property="code"/>
                <pickerField id="unitField" property="unit">
                    <actions>
                        <action id="lookup" type="picker_lookup">
                            <properties>
                                <property name="screenId" value="orderstore_GoodsGroups.search"/>
                            </properties>
                        </action>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <groupBox id="name_optionsBox" width="100%" caption="msg://GoodsEdit_groupBoxCaption" height="400px">
                    <dataGrid id="name_optionsTable"
                              editorEnabled="true"
                              dataContainer="name_optionsDC"
                              width="100%" height="300px">
                        <actions>
                            <action id="create"/>
                            <action id="edit"/>
                            <action id="remove" type="remove"/>
                        </actions>
                        <columns>
                            <column property="name"/>
                        </columns>
                        <rowsCount/>
                        <buttonsPanel id="buttonsPanel"
                                      alwaysVisible="true">
                            <button id="createBtn"
                                    action="name_optionsTable.create"/>
                            <button id="editBtn"
                                    action="name_optionsTable.edit"/>
                            <button id="removeBtn"
                                    action="name_optionsTable.remove"/>
                        </buttonsPanel>
                    </dataGrid>
                </groupBox>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
